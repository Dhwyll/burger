<div class="container">
	<div class="row">
			<div class="col s3 center">
				<img src="/assets/img/sleepy-burger.gif">
			</div>
			<div class="col s6 center-align pushDown">
				<span class="title">Eat-Da-Burger</span>
			</div>
			<div class="col s3 center">
				<img src="/assets/img/sleepy-burger.gif">
			</div>
	</div>
	<div class="row">
		<div class="col s6">
			{{#each burgers}}
				{{#unless this.devoured}}
					<div class="row">
						<div class="col s12">
							<div class="card blue-grey darken-1">
								<div class="card-content white-text">
									<strong>{{this.id}}. {{this.burger_name}}</strong>
								</div>
								<div class="card-action">
									<div class="input-field">
										<form action="/{{this.id}}?_method=PUT" method="POST">
											<button type="submit" name="devoured" value="true" class="waves-effect waves-light btn pink darken-2 white-text">
												<i class="material-icons left vertical-align-middle padding-bottom-3">local_dining</i> Devour!
											</button>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				{{/unless}}
			{{/each}}
		</div>
		<div class="col s6 devoured">
			<div class="row">
				{{#each burgers}}
					{{#if this.devoured}}
						<div class="col s12">
							<div class="card blue-grey darken-1">
								<div class="card-content grey-text">
									{{this.id}}. {{this.burger_name}}
								</div>
							</div>
						</div>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
	<div class="row">
	<div class="col s12 m6 offset-m3">
		<div class="card white">
			<div class="card-content">
				<div class="input-field">
					<form method="POST" action="/">
						<textarea id="burgerName" class="materialize-textarea" name="burgerName"></textarea>
						<label for="burgerName">Order Up!</label>
						<button class="btn waves-effect orange waves-light center-align" type="submit">Submit <i class="material-icons right">send</i>
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	</div>
	<div class="row">
		<div class="col s6 offset-s3 white-text center-align">
			Enter a burger you want to eat and then click Submit.
		</div>
	</div>
</div>